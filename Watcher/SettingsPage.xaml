<UserControl
    x:Class="Watcher.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Watcher">

    <StackPanel>
        <TextBlock x:Name="SettingsFilePathTextBlock" Text="Settings file path will be displayed here." />
        <Button Content="Browse Source Folder" Click="BrowseSourceFolder_Click" />
        <TextBox Header="Source Folder" x:Name="SourceFolderTextBox" IsReadOnly="True" />
        <Button Content="Browse Processed Folder" Click="BrowseProcessedFolder_Click" />
        <TextBox Header="Processed Folder" x:Name="ProcessedFolderTextBox" IsReadOnly="True" />
        <TextBox Header="Email From" x:Name="EmailFromTextBox" />
        <TextBox Header="Email To" x:Name="EmailToTextBox" />
        <TextBox Header="SMTP Server" x:Name="SmtpServerTextBox" />
        <TextBox Header="SMTP Port" x:Name="SmtpPortTextBox" />
        <TextBox Header="SMTP User" x:Name="SmtpUserTextBox" />
        <TextBox Header="SMTP Password" x:Name="SmtpPasswordTextBox" />
        <CheckBox Content="Use SSL" x:Name="UseSslCheckBox" IsChecked="True" />
        <Button Content="Save" Click="SaveSettings_Click" />
        
    </StackPanel>
</UserControl>